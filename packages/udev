#!/bin/bash

depends_on pkg-config
depends_on libtool

fetch_source http://ftp.de.debian.org/debian/pool/main/u/udev/udev_175.orig.tar.bz2
fetch_debian http://ftp.de.debian.org/debian/pool/main/u/udev/udev_175-7.2.debian.tar.xz

do_undebian
do_autoreconf

do_compile --disable-introspection --disable-gudev --disable-hwdb
