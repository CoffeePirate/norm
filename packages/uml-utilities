#!/bin/bash

depends_on libreadline

fetch_source http://ftp.de.debian.org/debian/pool/main/u/uml-utilities/uml-utilities_20070815.orig.tar.gz
fetch_debian http://ftp.de.debian.org/debian/pool/main/u/uml-utilities/uml-utilities_20070815-1.3.diff.gz

do_undebian
pushd_src
sed -i "s|/usr/|$PREFIX/|" Makefile
sed -i "s:umlfs::" Makefile
sed -i "s|/usr/|$PREFIX/|" jail/Makefile
sed -i 's:install -o 0755:install -m 0755:' humfsify/Makefile
do_make
do_install
