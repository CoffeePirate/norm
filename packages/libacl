#!/usr/bin/env bash
fetch_source https://download.savannah.gnu.org/releases/acl/acl-2.2.52.src.tar.gz 537dddc0ee7b6aa67960a3de2d36f1e2ff2059d9

depends_on libattr

do_unpack acl-2.2.52 acl-2.2.52.src.tar.gz
pushd_src
do_configure --enable-gettext=no
do_make
do_install
make install-dev
make install-lib
popd
log_success
